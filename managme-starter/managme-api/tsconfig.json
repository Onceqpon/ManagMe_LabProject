{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "lib": ["es2015", "esnext"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "moduleResolution": "node"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }